<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/productDetailsFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue"
    tools:context=".ui.ProductDetailsFragment">

    
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/product_image_iv"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:src="@color/gray_light"
        app:shapeAppearanceOverlay="@style/ImageRoundedCorners"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/details_tv"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@id/guideline_horizontal"/>

    <ImageView
        android:id="@+id/left_arrow_iv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/details_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/inter_semibold"
        android:text="@string/details"
        android:textColor="@color/white"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@id/left_arrow_iv"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_bookmark_filled_white_iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:src="@drawable/ic_bookmark_white_filled"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/icon_bookmark_outlined_white__iv"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_margin="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_bookmark_white_outlined"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/product_detailds_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        android:src="@drawable/white_rounded_bg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
    />

    <TextView
        android:id="@+id/product_name_tv"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/inter_light"
        android:text="Maison Tomas Pizza"
        android:textColor="@color/blue"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@id/product_detailds_bg"
        app:layout_constraintTop_toTopOf="@id/product_detailds_bg" />

    <TextView
        android:id="@+id/new_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/inter_light"
        android:text="100 EGP"
        android:textColor="@color/blue"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@id/product_detailds_bg"
        app:layout_constraintTop_toTopOf="@id/product_detailds_bg" />

    <TextView
        android:id="@+id/old_price_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:fontFamily="@font/inter_light"
        android:text="120 EGP"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_price_tv" />

    <View
        android:layout_width="50dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/old_price_tv"
        app:layout_constraintEnd_toEndOf="@id/old_price_tv"
        app:layout_constraintStart_toStartOf="@id/old_price_tv"
        app:layout_constraintTop_toTopOf="@id/old_price_tv" />

    <TextView
        android:id="@+id/product_desc_tv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical"
        app:layout_constraintTop_toBottomOf="@id/product_name_tv"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        android:text="text of the printing and typesetting industry. Lorem Ipsum has been the industry's standardÂ "
        android:textSize="16sp"
        android:fontFamily="@font/inter_light"
        android:textColor="@color/gray"
        />

    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/product_rb"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        app:layout_constraintTop_toBottomOf="@id/product_desc_tv"
        app:layout_constraintStart_toStartOf="parent"
        android:numStars="5"
        android:rating="4.5"
        android:progressTint="@color/orange"
        android:isIndicator="true"
        style="@style/Widget.AppCompat.RatingBar.Indicator"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"/>
    <View
        android:id="@+id/h_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_light"
        app:layout_constraintTop_toBottomOf="@id/product_rb"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/restaurant_image"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:src="@color/gray_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/h_view"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        app:civ_border_width="1dp"
        app:civ_border_color="@color/gray"
        />

    <TextView
        android:id="@+id/restaurant_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:fontFamily="@font/inter_bold"
        android:text="el beek"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/restaurant_image"
        app:layout_constraintStart_toEndOf="@id/restaurant_image"
        app:layout_constraintTop_toTopOf="@id/restaurant_image" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/call_btn"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:text="Call"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_image"
        android:layout_marginEnd="12dp"
        android:textColor="@color/white"
        android:fontFamily="@font/inter_medium"
        android:background="@drawable/call_btn_bg"
        android:drawableStart="@drawable/ic_phone"
        android:paddingStart="20dp"
        android:paddingEnd="28dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/whatsapp_btn"
        android:layout_width="165dp"
        android:layout_height="60dp"
        android:text="Whatsapp"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/restaurant_image"
        android:layout_marginStart="12dp"
        android:fontFamily="@font/inter_medium"
        android:background="@drawable/whatsapp_btn_bg"
        android:drawableStart="@drawable/ic_whatsapp"
        android:paddingStart="10dp"
        android:paddingEnd="25dp"
        />


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.37" />

</androidx.constraintlayout.widget.ConstraintLayout>